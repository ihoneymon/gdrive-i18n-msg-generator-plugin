== {gradle} {proj} 생성
[source,groovy]
----
plugins {
    id 'java'
}

group 'io.honeymon.gradle.'
version '1.0-SNAPSHOT'

sourceCompatibility = 1.8

repositories {
    mavenCentral()
}

dependencies {
    compile gradleApi() // Gradle API

    testCompile group: 'junit', name: 'junit', version: '4.12'
}

----


